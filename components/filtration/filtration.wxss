.icon-xia{
	font-family: 'iconfont';
	color: red;
}
.top{
	position: relative;
	display: flex;
	justify-content:space-between;
	padding: 15rpx 0rpx;
	border-bottom: 1rpx solid #f3f3f3;
	padding: 15rpx  60rpx 15rpx 40rpx;
	color: #999999;
}
.top image{
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	margin-top: 10rpx;
	top: -7rpx;
}
.area{
	width: 100%;
	height: 550rpx;
	display: flex;
	position: absolute;
	z-index: 10;
	background-color: #fff;
}
.s1{
	height: 100%;
	width: 215rpx;
}
.district{
	padding: 25rpx 0rpx;
}
.s2{
	height: 100%;
	width: 100%;
	background-color: #f3f3f3;
	padding-left: 25rpx;
}
.color{
	color: #27bbb2; 
}
.white{
	background-color: #fff;
}
.noflex{
	display: block;
}
.wrap{
	display: flex;
	height: 100%;
}
.bottom{
	display: flex;
	background-color: #fff;
	z-index: 10;
	align-items: center;
	padding: 20rpx 0rpx;
}
.average{
	border: 1rpx solid #ccc;
	width: 150rpx;
	height: 60rpx;
	padding-left: 20rpx;
	margin-right: 20rpx;
}
.average[placeholder]{
	font-size: 28rpx;
}
.bottom button{
	background-color: #27bbb2;
	border-radius: 50rpx;
	width: 200rpx;
	color: white;
	margin-left: auto;
	font-weight: normal;
	font-size: 28rpx;
}
button:active{
	filter: brightness(90%);
}