.content{
	padding: 20rpx 40rpx;
	box-sizing: border-box;
}
image{
	width: 100%;
	height: 300rpx;
	margin-bottom: 40rpx;
}
.info{
	position: relative;
	font-weight: bold;
	font-size: 34rpx;
	margin-left: 28rpx;
}
.info::before{
	content: "";
	position: absolute;
	display: block;
	width: 12rpx;
	height: 40rpx;
	background-color: #3fbaa6;
	border-radius: 10rpx;
	top: -1rpx;
}
.entrust{
	display: flex;
	justify-content: space-between;
	margin-top: 50rpx;
}
.diamonds{
	width: 325rpx;
	height: 120rpx;
	line-height: 120rpx;
	text-align: center;
	background-color: #ececec;
	border-radius: 18rpx;
	font-size: 32rpx !important;
}
.blue{
	background-color: #3fbaa6;
	color: white;
}
.title{
	font-weight: bold;
	margin-bottom: 20rpx;
	display: block;
	font-size: 32rpx;
}
.footer{
	font-size: 28rpx;
	color: #b6b6b6;
	letter-spacing: 3rpx;
	line-height: 40rpx;
}
.text{
	margin-bottom: 300rpx;
}
.btn{
	width:90% !important;
	border-radius: 50rpx;
	font-weight: normal;
	background-color: #3fbaa6;
	color: white;
	margin-top: 40rpx;
	position: fixed;
	bottom: 40rpx;
	
}
.btn:active{
	filter: brightness(90%);
}
