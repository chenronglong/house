image{
	width: 100%;
	height: 300rpx;
	margin-bottom: 10rpx;
}
.content{
	padding: 20rpx 40rpx;
}

.info{
	position: relative;
	font-weight: bold;
	font-size: 34rpx;
	margin-left: 28rpx;
	margin-left: 40rpx;
}
.info::before{
	content: "";
	position: absolute;
	display: block;
	width: 12rpx;
	height: 40rpx;
	background-color: #3fbaa6;
	border-radius: 10rpx;
}
.color{
	background-color: #3fbaa6 !important;
	color: white;
}
.items{
	display: flex;
	flex-wrap: wrap;
	margin-bottom: 20rpx;
	margin-top: 40rpx;
}
.item{
	padding: 10rpx 20rpx;
	background-color: #f4f4f4;
	font-size: 28rpx;
	font-weight: 400;
	width: 115rpx;
	height: 45rpx;
	line-height: 50rpx;
	float: left;
	margin-right: 19rpx;
	margin-bottom: 25rpx;
	text-align: center;

}
.item:active{
	filter: brightness(90%);
}
.item:nth-child(4n){
	margin-right: 0rpx;
}
.middle{
	margin-top: 40rpx;
	overflow: hidden;
	margin-bottom: 20rpx;
}
.search{
	display: flex;
	align-items: center;
	height: 70rpx;
	margin-top: 40rpx;
	border-radius: 10rpx;
	border: 1rpx solid #ccc;
}
input{
	width: 80%;
	padding-left: 20rpx;
}
.icon-xingtaiduICON{
	color: #c1c1c1;
	margin: 0rpx 20rpx;
}
input[placeholder]{
	font-size: 28rpx;
}
.btn{
	width:90% !important;
	border-radius: 50rpx;
	font-weight: normal;
	background-color: #3fbaa6;
	color: white;
	margin-top: 40rpx;
	margin-bottom: 40rpx;
}
.btn:active{
	filter: brightness(90%);
}
