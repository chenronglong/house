.container {
	width: 100vw;
}
ec-canvas {
	width: 300rpx;
	height: 300rpx;
}
.box {
	/* position: absolute; */
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	box-sizing: border-box;
}
.type {
	width: 100%;
	height: 100rpx;
	display: flex;
	justify-content: space-around;
	align-items: flex-end;
	padding-bottom: 20rpx;
	border-bottom: 1rpx solid #f7f7f7;
	position: relative;
	font-size: 28rpx;
	color: #9a9a9a;
}

.bold {
	font-weight: bold;
	font-size: 32rpx !important;
	color: #333;
}

.item {
	width: 200rpx;
	text-align: center;
	font-size: 32rpx;
}

.color::after {
	content: "";
	display: block;
	width: 54rpx;
	height: 6rpx;
	background-color: #2bcfc4;
	position: absolute;
	bottom: 9rpx;
	border-radius: 30rpx;
	margin-left: 73rpx;
}

.icon-you {
	font-family: 'iconfont';
	color: #cecece;
	font-size: 28rpx;
	margin-top: 10rpx;
	margin-left: 10rpx;
}

.r {
	display: flex;
}

.qq::before{
	content: "";
	width: 10rpx;
	height: 10rpx;
	background-color: rgb(255,176,68);
	border-radius: 50%;
	position: absolute;
	top: 25rpx;
	left: -12rpx;
}
.bb::before{
	background-color: rgb(0,200,235);
	content: "";
	width: 10rpx !important;
	height: 10rpx;
	border-radius: 50%;
	position: absolute;
	top: 25rpx;
	left: -12rpx;
}
.calsulate-item {
	display: flex;
	padding: 30rpx 20rpx;
	border-top: 1rpx solid #f7f7f7;
	border-bottom: 1rpx solid #f7f7f7;
	justify-content: space-between;
	align-items: center;
	margin: 0rpx 30rpx;
	height: 50rpx;
	flex-direction: row;
}

.hidden {
	display: none;
}

.sellInput {
	width: 100rpx;
}

.right {
	display: flex;
}

.side {
	font-weight: bold;
	font-size: 28rpx;
}

.icon-qiehuan {
	color: #27bbb2;
	font-family: 'iconfont';
	font-weight: bold;
	margin: 0rpx 20rpx;
}

button {
	background-color: #2bcfc4;
	width: 90% !important;
	color: white;
	font-weight: normal !important;
	font-size: 28rpx !important;
	margin-top: 30rpx;
}

button:active {
	filter: brightness(90%);
}

.bottom {
	display: flex;
	justify-content: center;
	font-size: 21rpx;
	color: #b0b0b0;
	margin-top: 10rpx;
}

.price {
	color: #cecece;
	font-size: 26rpx;
}

picker {
	margin-left: auto;
}

input {
	width: 220rpx;
}

input[placeholder] {
	font-size: 28rpx;
}

.toggle {
	font-size: 28rpx;
	color: #b4b4b4;
}

.q {
	width: 100rpx;
	text-align: center;
}

.t {
	font-size: 28rpx;
}

.m {
	font-size: 28rpx;
}

.e {
	border: 1rpx solid red;
}

.result {
	width: 90%;
	height: 600rpx;
	border-radius: 10rpx;
	box-shadow: 0rpx 0rpx 20rpx 0rpx #e3e3e3;
	margin: auto;
	margin-top: 50rpx;
	margin-bottom: 50rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-sizing: border-box;
}

.bo {
	display: flex;
}

.bo image {
	width: 200rpx;
	height: 200rpx;
	border-radius: 50%;
}

.bt {
	width: 350rpx;
	margin: 50rpx 0rpx;
	text-align: center;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 28rpx;
}

.bt text {
	display: inline-block;
}

.bt text:first-of-type {
	background-color: white;
	padding: 0rpx 30rpx;
	border: 2rpx solid #ccc;
	border-right: none;
	border-radius: 30rpx 0rpx 0rpx 30rpx;
}

.bt text:last-of-type {
	padding: 0rpx 30rpx;
	border: 2rpx solid #ccc;
	border-left: none;
	border-radius: 0rpx 30rpx 30rpx 0rpx;
}

.active {
	background-color: #27bbb2 !important;
	color: white;
}

.right1 {
	display: flex;
	flex-direction: column;
	margin-left: 20rpx;
}

.itemq {
	display: flex;
	width: 300rpx;
	font-size: 28rpx;
	padding: 10rpx 0rpx;
}

.itemq view {
	width: 170rpx;
	text-align: center;
	display: flex;
	align-items: center;
	color: #a1a1a1;
}

.itemq text {
	font-weight: bold;
}
